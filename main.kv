<MainWidget>:
    FloatLayout:
        ImageController:
            id: image_controller
            pos_hint: {'x': 0, 'y': 0}
            size_hint: (1, 1)
        ConfirmDialog:
            id: confirm_dialog
            pos_hint: {'x': 0, 'y': 0}
            size_hint: (1, 1)
            opacity: 0.0
            disabled: True
    Widget:
        pos: (0, 0)
        size: root.size
        canvas:
            Color:
                rgb: 1, 1, 1
            Ellipse:
                pos: root.cursor_pos
                size: (root.cursor_size, root.cursor_size)
 
<ImageController>:
    BoxLayout:
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        pos: (0, 0)
        size: root.size
        orientation: 'vertical'
        Label:
            id: label_widget
            size_hint: 1, 0.1
            text: root.prompt
        BoxLayout:
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5}
            SpeechWidget:
                id: speech_widget
                size: (100, 40)
        FloatLayout:
            size_hint: 1, 0.7
            ImageContainer:
                pos_hint: {'x': 0, 'y': 0}
                size_hint: (1, 1)
                image_source: root.image_src
                id: image_view
            AnnotationsView:
                pos_hint: {'x': 0, 'y': 0}
                size_hint: (1, 1)
                id: annotations_view
            Paintbrush:
                pos_hint: {'x': 0, 'y': 0}
                size_hint: (1, 1)
                id: paintbrush
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            LeapButton:
                text: "Redo this image"
                size_hint: 0.5, 1
                id: redo_button
            LeapButton:
                text: "I'm done with this image"
                size_hint: 0.5, 1
                id: done_button
                disabled: True # disable until first annotation
    FloatLayout:
        canvas:
            Color:
                rgba: 0, 0, 0.1, 0.6
            Rectangle:
                pos: self.pos
                size: self.size
        id: transcribing_overlay
        pos: root.pos
        size: root.size
        disabled: True
        opacity: 0.0
        Label:
            text: "Transcribing..."
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<ImageContainer>:
    Image:
        allow_stretch: True
        keep_ratio: True
        pos_hint: {'x': 0, 'y': 0}
        size_hint: (1, 1)
        source: root.image_source
    Image:
        opacity: 1 if root.overlay_source else 0
        allow_stretch: True
        keep_ratio: True
        pos_hint: {'x': 0, 'y': 0}
        size_hint: (1, 1)
        source: root.overlay_source

<GestureDrawing>:
    canvas:
        Color:
            rgba: 0.98, 0.85, 0.16, 0.4
        Line:
            points: self.points
            joint: 'round'
            cap: 'round'
            width: 20.0

<SpeechWidget>:
    num_bars: 9
    color: 0.5, 0.5, 0.5, 1

<ConfirmDialog>:
    canvas:
        Color:
            rgba: 0, 0, 0.1, 0.9
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: self.left_color
        Rectangle:
            pos: self.pos
            size: (self.size[0] / 2, self.size[1])
        Color:
            rgba: self.right_color
        Rectangle:
            pos: (self.pos[0] + self.size[0] / 2, self.pos[1])
            size: (self.size[0] / 2, self.size[1])
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: "vertical"
        id: parent_view
        Label:
            id: label_widget
            size_hint: 1, 0.2
            text: "Hover left to re-do, hover right to confirm."
        FloatLayout:
            size_hint: 1, 0.6
            ImageContainer:
                image_source: root.image_src
                pos_hint: {'x': 0, 'y': 0}
                size_hint: (1, 1)
                id: image_view
            Widget:
                pos_hint: {'x': 0, 'y': 0}
                size_hint: (1, 1)
                id: paintbrush_parent
            Widget:
                pos_hint: {'x': 0, 'y': 0}
                size_hint: (1, 1)
                id: label_parent
        Label:
            id: transcript_widget
            size_hint: 1, 0.2
            text: "Transcript: " + root.transcript

<LeapButton>:
    canvas:
        Color:
            rgba: self.hover_color
        Rectangle:
            pos: self.pos
            size: self.size
    AnchorLayout:
        pos: root.pos
        size: root.size
        Label:
            text: "[b]" + root.text + "[/b]"
            opacity: 0.5 if root.disabled else 1.0
            markup: True
            anchor_x: "center"
            anchor_y: "center"
